#include <iostream>
#include <math.h>
using namespace std;

int pole (int a, int h)
{
    double pole;
    pole = double((a*h)/2);
    cout <<pole;
}

int pole(int a)
{
    double pole;
    pole=3.14*a*a;
    cout <<pole;
}

int main()
{
    int a,b;
    cout <<"Podaj 2 liczby:";
    cin >> a;
    cin >> b;
    cout << "Pole trojkata rowna sie:";
    pole (a,b);
    cout << endl;
    cout << "Pole kole rowna sie:";
    pole (a);

    return 0;
}
